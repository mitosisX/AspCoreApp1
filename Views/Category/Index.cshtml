@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var data in Model)
        {
            <tr>
                <td>@data.Name</td>
                <td>@data.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@data.Id">Edit</a>
                        <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@data.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>